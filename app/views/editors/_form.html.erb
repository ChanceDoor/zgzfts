<%= form_for @editor, :html => {:multipart => true} do |f| %>
  <% if @editor.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@editor.errors.count, "error") %> prohibited
      保存失败:</h2>
    <ul>
    <% @editor.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label '姓名' %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label '级别'%><br>
    <%= f.text_field :level %>
  </p>
  <p>
    <%= f.label '头像' %><br>
    <%= f.file_field :portrait %>
  </p>
  <p>
    <%= f.label '简历' %><br>
    <%= f.kindeditor :resume %>
  </p>

  <p>
    <%= f.submit '提交'%>
  </p>
<% end %>

<%= link_to '返回', admin_root_path %>
