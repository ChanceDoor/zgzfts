<div class="border home-blocks">
    <div class="row-fluid" style="border-bottom:1px solid #CECECE">
      <div class="span10" style="padding-left:10px"><h3>行业新闻</h3></div>
      <div class="span2" style="padding-top:20px"><%=link_to "more",news_index_path%></div>
    </div>
    <div class="row-fluid">
      <div class="span12">
  <ul>
          <% @news.each do |n| %>
      <li>
        <%= link_to n.title, news_path(n) %>
              <% if n.posttime.year == Time.now.year && n.posttime.month == Time.now.month && Time.now.day-n.posttime.day <= 3 %>
          <%=image_tag 'new.png'%>
        <%end%>
      </li>
          <% end %>
        </ul>
      </div>
      <div><%= paginate @news, :param_name => :news_page %></div>
    </div>
  </div>
