	      <%if n.posttime.year == Time.now.year && n.posttime.month == Time.now.month && Time.now.day-n.posttime.day <= 3 %>
	        <%=image_tag 'new.png'%>
	      <%end%>
	    </li>
          <% end %>
        </ul>
      </div>
      <div><%= paginate @notices, :param_name => :notices_page %></div>
    </div>
  </div>
 
  <div class="span4 border">
    <div class="row-fluid" style="border-bottom:1px solid #CECECE">
      <div class="span10" style="padding-left:10px"><h3>经销商信息</h3></div>
      <div class="span2" style="padding-top:20px"><%=link_to "more",distributions_path%></div>
    </div>
    <div class="row-fluid">
      <div class="span12"><ul>
      <%@distributions.each do |d|%>
	<li>
	  <%=link_to d.title, distribution_path(d)%>
	  <%if d.posttime.year == Time.now.year && d.posttime.month == Time.now.month && Time.now.day-d.posttime.day <= 3 %>
