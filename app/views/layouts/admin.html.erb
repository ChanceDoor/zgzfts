<!DOCTYPE html>
<html>
<head>
  <title>中国政府图书网</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/admin_navigation' %>
        </div>
      </nav>
</div>
<div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
	     <div class="span12">
	       <% flash.each do |name, msg| %>
		 <% if msg.is_a?(String) %>
                   <div class="alert alert-<%= name == :notice ? "success" : "err    or" %>">
                     <a class="close" data-dismiss="alert">&#215;</a>
                     <%= content_tag :div, msg, :id => "flash_#{name}" %>
                   </div>
	         <% end %>
	       <% end %>
               <%= yield %>
             </div>
           </div>
          <footer>
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
</body>
</html>
