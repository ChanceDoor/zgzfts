<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %>元法图书网</title>
  <%= render 'layouts/seo' %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="topimg"><%=image_tag "top.jpg"%></div>
<div class="navbar">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
          <% flash.each do |key, value| %>
          <div id="message" class="alert alert-<%= key %>" style="z-index:10;position:absolute;width:100%"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><%= value %></div>
        <% end %>
        </div>
      </nav>
</div>
<%= render "layouts/codes" %>
<div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%= yield %>
            </div>
          </div>
	  <footer>
	    <%= render 'layouts/footer'%>
          </footer>
	</div>
	<%= render 'layouts/contact'%>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
    <%= javascript_include_tag "application" %>
</body>
</html>
