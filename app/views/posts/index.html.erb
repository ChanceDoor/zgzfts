<% provide(:title, "专栏|") %>
<table class="content-table table table-striped table table-bordered table table-hover table table-condensed " cellSpacing=1 cellPadding=1>
    <tbody>
      <tr class="bt-1 bg-wr">
	<th class="bg-wr" colspan="2">专栏</th>
      </tr>
     <%@posts.each do |p|%>
       <tr>
	 <td class="w80p br-n">
           <%= link_to n.title, post_path(p) %>
           <%if p.posttime.year == Time.now.year && p.posttime.month == Time.now.month && Time.now.day-n.posttime.day <= 3 %>
             <%=image_tag 'new.png'%>
           <%end%>
         </td>
         <td class="bl-n">
          <%=p.posttime.strftime("%Y-%m-%d")%>
         </td>
       </tr>
     <% end %>
     <tr>
       <td><%= paginate @posts, :left => 3, :right => 1%></td>
     </tr>
   </tbody>
 </table>
